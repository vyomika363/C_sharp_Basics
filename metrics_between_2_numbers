using System; //namespace

class Program //default visibility is 'internal' if not specified
{
    public static void Main(string[] args) //entry point of the program
    {
        // Accept user input for two numbers
        Console.WriteLine("Enter first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());
        Console.WriteLine("Enter second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        // Perform arithmetic operations
        double sum = num1 + num2;
        double difference = num1 - num2;
        double product = num1 * num2;
        double quotient = num1 / num2;

        // Display results
        Console.WriteLine("\nResults:");
        Console.WriteLine("Addition: " + sum);
        Console.WriteLine("Subtraction: " + difference);
        Console.WriteLine("Multiplication: " + product);
        Console.WriteLine("Division: " + quotient);

        // checking if the sum is even or odd
        if (sum % 2 == 0)
            Console.WriteLine("The sum is even.");
        else
            Console.WriteLine("The sum is odd.");
    }
}
